<%= simple_form_for(@product, wrapper: :horizontal_form, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price %>
  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.button :submit %>
    <%= f.button :cancel, to: products_path %>
  </div>
<% end %>
