<% content_for :class, "scaffold" %>

<div class="page-header">
  <div class="container">
    <h2>Showing message</h2>
  </div>
</div>

<div class="container">
  <div class="form-horizontal">
    <div class="form-group">
      <label class="col-md-2 control-label">Title</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @message.title %>
          </span>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label">Content</label>
      <div class="col-md-10">
        <div class="form-control">
          <span>
            <%= @message.content %>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-actions col-md-offset-2 col-md-10">
    <%= link_to fa_icon_tag("pencil") + ' Edit', edit_message_path(@message), class: 'btn btn-primary' %>
    <%= link_to 'Back', messages_path, class: 'btn' %>
  </div>
</div>
