<%= form_for(@message, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :title do |f| %>
      <%= f.label :title, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_field :title, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
    <%= f.form_group :content do |f| %>
      <%= f.label :content, class: 'col-md-2 control-label' %>
      <div class='col-md-10'>
        <%= f.text_area :content, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="form-actions col-md-offset-2 col-md-10">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to "Cancel", messages_path, class: 'btn' %>
  </div>
<% end %>
